<UserControl x:Class="InvoiceRobot.Admin.Views.DeploymentWizard.Step3_Resources"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">
            <TextBlock Text="Configuration"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20" />

            <TextBlock Text="Määritä deployment-asetukset. Wizard luo KAIKKI tarvittavat resurssit automaattisesti."
                       TextWrapping="Wrap"
                       FontSize="14"
                       Margin="0,0,0,20" />

            <!-- Azure Infrastructure -->
            <TextBlock Text="Azure Infrastructure"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,10,0,10" />

            <TextBlock Text="Resource Group Name:"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,10,0,5" />

            <TextBox Text="{Binding Config.ResourceGroupName, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="esim. rg-invoicerobot-prod"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,15" />

            <TextBlock Text="Location:"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,10,0,5" />

            <TextBox Text="{Binding Config.Location, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="esim. northeurope"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,15" />

            <TextBlock Text="Name Prefix:"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,10,0,5" />

            <TextBox Text="{Binding Config.NamePrefix, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="esim. invoicerobot"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,15" />

            <TextBlock Text="Environment:"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,10,0,5" />

            <TextBox Text="{Binding Config.Environment, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="esim. dev, test, prod"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,15" />

            <!-- Application Configuration -->
            <TextBlock Text="Application Configuration"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,20,0,10" />

            <TextBlock Text="Accounting Provider:"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,10,0,5" />

            <ComboBox SelectedValue="{Binding Config.AccountingProvider}"
                      SelectedValuePath="Content"
                      materialDesign:HintAssist.Hint="Valitse taloushallintojärjestelmä"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Margin="0,0,0,15">
                <ComboBoxItem Content="Netvisor" />
                <ComboBoxItem Content="Procountor" />
            </ComboBox>

            <TextBlock Text="SQL Server Password:"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,10,0,5" />

            <PasswordBox materialDesign:HintAssist.Hint="Vahva salasana (min. 8 merkkiä)"
                         materialDesign:PasswordBoxAssist.Password="{Binding Config.SqlServerPassword, Mode=TwoWay}"
                         Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                         Margin="0,0,0,15" />

            <TextBlock Text="Email PM Distribution List:"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,10,0,5" />

            <TextBox Text="{Binding Config.EmailPmDistributionList, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="pm1@example.com,pm2@example.com"
                     TextWrapping="Wrap"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,20" />

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,30,0,0">
                <Button Content="← Edellinen"
                        Command="{Binding PreviousStepCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,10,0" />

                <Button Content="Seuraava →"
                        Command="{Binding NextStepCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
