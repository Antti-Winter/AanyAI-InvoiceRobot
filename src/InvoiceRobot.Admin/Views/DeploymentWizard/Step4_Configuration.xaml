<UserControl x:Class="InvoiceRobot.Admin.Views.DeploymentWizard.Step4_Configuration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">
            <TextBlock Text="Review"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20" />

            <TextBlock Text="Tarkista deployment-asetukset ennen resurssien luomista."
                       TextWrapping="Wrap"
                       FontSize="14"
                       Margin="0,0,0,30" />

            <!-- Subscription ja Resource Group -->
            <TextBlock Text="Azure Subscription"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,10,0,10" />

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Subscription ID:" FontWeight="Bold" Margin="0,5" />
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Config.SubscriptionId}" Margin="0,5" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Resource Group:" FontWeight="Bold" Margin="0,5" />
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Config.ResourceGroupName}" Margin="0,5" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Location:" FontWeight="Bold" Margin="0,5" />
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Config.Location}" Margin="0,5" />
            </Grid>

            <!-- Nimeäminen -->
            <TextBlock Text="Nimeäminen"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,20,0,10" />

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Name Prefix:" FontWeight="Bold" Margin="0,5" />
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Config.NamePrefix}" Margin="0,5" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Environment:" FontWeight="Bold" Margin="0,5" />
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Config.Environment}" Margin="0,5" />
            </Grid>

            <!-- Application Configuration -->
            <TextBlock Text="Application Configuration"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,20,0,10" />

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Accounting Provider:" FontWeight="Bold" Margin="0,5" />
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Config.AccountingProvider}" Margin="0,5" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="SQL Server Password:" FontWeight="Bold" Margin="0,5" />
                <TextBlock Grid.Row="1" Grid.Column="1" Text="••••••••" Margin="0,5" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="PM Distribution List:" FontWeight="Bold" Margin="0,5" />
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Config.EmailPmDistributionList}" TextWrapping="Wrap" Margin="0,5" />
            </Grid>

            <!-- Luotavat resurssit -->
            <TextBlock Text="Luotavat Azure-resurssit"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,20,0,10" />

            <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Wizard luo automaattisesti seuraavat resurssit:"
                               FontWeight="Bold"
                               Margin="0,0,0,10" />

                    <TextBlock Text="✓ Storage Account" Margin="5" />
                    <TextBlock Text="✓ App Service Plan (Consumption)" Margin="5" />
                    <TextBlock Text="✓ Function App (.NET 8.0 Isolated)" Margin="5" />
                    <TextBlock Text="✓ SQL Server + Database (Basic tier)" Margin="5" />
                    <TextBlock Text="✓ Application Insights" Margin="5" />
                    <TextBlock Text="✓ Azure OpenAI (S0 tier + GPT-4 deployment)" Margin="5" />
                    <TextBlock Text="✓ Document Intelligence / Form Recognizer (S0 tier)" Margin="5" />
                    <TextBlock Text="✓ Communication Services (Email)" Margin="5" />

                    <TextBlock Text="Kaikki API-avaimet ja connection stringit konfiguroidaan automaattisesti Function App:iin."
                               FontStyle="Italic"
                               Margin="0,15,0,0"
                               TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,30,0,0">
                <Button Content="← Edellinen"
                        Command="{Binding PreviousStepCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,10,0" />

                <Button Content="Aloita Deployment →"
                        Command="{Binding NextStepCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
