<UserControl x:Class="InvoiceRobot.Admin.Views.DeploymentWizard.Step1_Welcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <StackPanel Margin="40">
        <TextBlock Text="Tervetuloa InvoiceRobot -asennukseen"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20" />

        <TextBlock Text="Tämä wizard asentaa InvoiceRobot-sovelluksen Azure-ympäristöön."
                   TextWrapping="Wrap"
                   FontSize="14"
                   Margin="0,0,0,10" />

        <TextBlock Text="Varmista että olet kirjautunut Azureen (az login)."
                   TextWrapping="Wrap"
                   FontSize="14"
                   Margin="0,0,0,30" />

        <Button Content="Seuraava →"
                Command="{Binding NextStepCommand}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                HorizontalAlignment="Right" />
    </StackPanel>
</UserControl>
