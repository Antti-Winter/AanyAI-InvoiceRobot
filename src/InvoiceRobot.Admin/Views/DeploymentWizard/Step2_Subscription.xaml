<UserControl x:Class="InvoiceRobot.Admin.Views.DeploymentWizard.Step2_Subscription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <StackPanel Margin="40">
        <TextBlock Text="Azure Subscription"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20" />

        <TextBlock Text="Valitse Azure subscription johon InvoiceRobot asennetaan:"
                   TextWrapping="Wrap"
                   FontSize="14"
                   Margin="0,0,0,10" />

        <TextBlock Text="Subscription ID:"
                   FontSize="14"
                   FontWeight="Bold"
                   Margin="0,20,0,5" />

        <TextBox Text="{Binding Config.SubscriptionId, UpdateSourceTrigger=PropertyChanged}"
                 materialDesign:HintAssist.Hint="Subscription ID"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,20" />

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,30,0,0">
            <Button Content="← Edellinen"
                    Command="{Binding PreviousStepCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,10,0" />

            <Button Content="Seuraava →"
                    Command="{Binding NextStepCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
        </StackPanel>
    </StackPanel>
</UserControl>
