<UserControl x:Class="InvoiceRobot.Admin.Views.DeploymentWizardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:wizard="clr-namespace:InvoiceRobot.Admin.Views.DeploymentWizard">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Step Indicator -->
        <Border Grid.Row="0"
                Background="{DynamicResource MaterialDesignDarkBackground}"
                Padding="20,10">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock Text="Vaihe"
                           Foreground="White"
                           FontSize="14"
                           Margin="0,0,5,0" />
                <TextBlock Text="{Binding CurrentStep}"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold" />
                <TextBlock Text=" / 5"
                           Foreground="White"
                           FontSize="14" />
            </StackPanel>
        </Border>

        <!-- Step Content - kaikki stepit luodaan kerralla, vain yksi nÃ¤kyy kerrallaan -->
        <Grid Grid.Row="1">
            <!-- Step 1: Welcome -->
            <wizard:Step1_Welcome DataContext="{Binding}"
                                  Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=1}" />

            <!-- Step 2: Subscription -->
            <wizard:Step2_Subscription DataContext="{Binding}"
                                       Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=2}" />

            <!-- Step 3: Resources -->
            <wizard:Step3_Resources DataContext="{Binding}"
                                    Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=3}" />

            <!-- Step 4: Configuration -->
            <wizard:Step4_Configuration DataContext="{Binding}"
                                        Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=4}" />

            <!-- Step 5: Deploy -->
            <wizard:Step5_Deploy DataContext="{Binding}"
                                 Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=5}" />
        </Grid>
    </Grid>
</UserControl>
