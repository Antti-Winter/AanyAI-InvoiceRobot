<Application x:Class="InvoiceRobot.Admin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:InvoiceRobot.Admin.Converters"
             xmlns:vm="clr-namespace:InvoiceRobot.Admin.ViewModels"
             xmlns:views="clr-namespace:InvoiceRobot.Admin.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Blue" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:BoolToVisConverter x:Key="BoolToVisConverter" />
            <converters:InverseBoolToVisConverter x:Key="InverseBoolToVisConverter" />
            <converters:NullToVisConverter x:Key="NullToVisConverter" />
            <converters:StepVisibilityConverter x:Key="StepVisibilityConverter" />

            <!-- DataTemplates - yhdistää ViewModelit ja Viewit -->
            <DataTemplate DataType="{x:Type vm:DeploymentWizardViewModel}">
                <views:DeploymentWizardView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ConfigurationViewModel}">
                <views:ConfigurationView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:InvoicesViewModel}">
                <views:InvoicesView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:LogsViewModel}">
                <views:LogsView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
