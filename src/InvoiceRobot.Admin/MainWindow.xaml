<Window x:Class="InvoiceRobot.Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:InvoiceRobot.Admin.ViewModels"
        Title="{Binding Title}"
        Height="800"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        Foreground="{DynamicResource MaterialDesignBody}">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sivupalkki (navigaatio) -->
        <Border Grid.Column="0"
                Background="{DynamicResource MaterialDesignDarkBackground}">
            <StackPanel Margin="20">
                <TextBlock Text="InvoiceRobot Admin"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,30" />

                <Button Content="Deployment"
                        Command="{Binding NavigateToDeploymentCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"
                        Margin="0,5" />

                <Button Content="Konfiguraatio"
                        Command="{Binding NavigateToConfigurationCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"
                        Margin="0,5" />

                <Button Content="Laskut"
                        Command="{Binding NavigateToInvoicesCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"
                        Margin="0,5" />

                <Button Content="Lokit"
                        Command="{Binding NavigateToLogsCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"
                        Margin="0,5" />
            </StackPanel>
        </Border>

        <!-- Pääsisältö -->
        <ContentControl Grid.Column="1"
                        Content="{Binding CurrentView}"
                        Margin="20" />
    </Grid>
</Window>
